  .target "65C02"
  .format "bin"

  .org $0200

  jmp start

Screen .equ $8000

; Data
message:
    .byte '#'

; Code
start:
    ldx #40

start_loop:
    txa
    beq start_end
    lda message
    jsr output_char
    dex
    jmp start_loop

start_end:
    jmp start_end

output_char:
    pha
output_char_loop:
    lda Screen
    bne output_char_loop
    pla
    sta Screen
    rts


; End of rom  
    .org $FFFC
    .word $0200
    .word $0000