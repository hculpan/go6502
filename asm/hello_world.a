  .target "65C02"
  .format "txt"

  .setting "Debug",true
  .setting "DebugCodeFile","hello_world.debug_code"
  .setting "DebugFile","hello_world.debug_file"

  .org $9000

  jmp start

Screen .equ $8000

; Data
message:
  .textz "Hello, world!\r"

start:
  ldx #$00

start_loop:
  lda message,x
  beq start_end
  jsr output_char
  inx
  jmp start_loop

start_end:
  jmp start 

output_char:
  pha
output_char_loop:
  lda Screen
  bne output_char_loop
  pla
  sta Screen
  rts

  .org $F000
irq_handler:
  cli
  rti

; End of rom  
  .org $FFFC
  .word $9000
  .word irq_handler